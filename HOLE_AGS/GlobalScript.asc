function btnMainStart_OnClick(GUIControl *control, MouseButton button)
{
  StartCutscene(eSkipAnyKeyOrMouseClick);
  int StartTransp = 0;
  while (StartTransp < 100) {
    StartTransp++;
    guiMainMenu.Transparency = StartTransp;
    Wait(1);
  }
  EndCutscene();
  player.ChangeRoom(10, 160, 160);
}

