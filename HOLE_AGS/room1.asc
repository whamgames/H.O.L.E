// room script file

function room_Load()
{
// Prep intro cutscene here
cEgo.Transparency = 100;
Mouse.Mode = eModeInteract;
}

function room_AfterFadeIn()
{
// Intro cutscene initiates here
StartCutscene(eSkipAnyKey);
// Intro cutscene stuff is placed here
FadeIn(1);
audioMusic = aCrypto.Play(eAudioPriorityHigh, eOnce);
Wait(60);
player.SayAt(220, 133, 180, "In 1979 a mining expedition discovered a deep pit while prospecting for precious minerals"); Wait(30);
player.SayAt(220, 133, 180, "It quickly became obvious that the discovery was unusual and warranted further study"); Wait(30);
oIntroSlides.Graphic = 98; Wait(30);
player.SayAt(220, 133, 180, "In 1981 a privately funded scientific study of the site was initiated"); Wait(30);
player.SayAt(220, 133, 180, "Infrastrucure was set up and efforts began to collect data from deeper and deeper down below"); Wait(30);
player.SayAt(220, 133, 180, "The staff studying the site described it as a 'vast Hypogean chasm'"); Wait(30);
oIntroSlides.Graphic = 99; Wait(30);
player.SayAt(220, 133, 180, "In 1984 the project reached its peak with the Government becoming directly involved"); Wait(30);
player.SayAt(220, 133, 180, "The site gained its official designation of H.O.L.E"); Wait(30);
player.SayAt(220, 133, 180, "The Hypogean Opening Lithotypical Expedition"); Wait(30);
oIntroSlides.Graphic = 100; Wait(30);
player.SayAt(220, 133, 180, "The studies showed great promise"); Wait(30);
player.SayAt(220, 133, 180, "Traces of valuable minerals, gemstones and even greater assets were just waiting to be unveiled"); Wait(30);
player.SayAt(220, 133, 180, "Then, without a reason given, the project was cancelled"); Wait(60);
player.SayAt(220, 133, 180, "That's where we come in"); Wait(30);
oIntroSlides.Graphic = 101; Wait(30);
player.SayAt(220, 133, 180, "A new team with fresh funding and materials have been assembled to enter the H.O.L.E once again"); Wait(30);
player.SayAt(220, 133, 180, "And it will be you to get the honour of being the first human being down there in decades"); Wait(60);
player.SayAt(220, 133, 180, "So..."); Wait(30);
player.SayAt(220, 133, 180, "Feeling excited yet?"); Wait(120);
EndCutscene();
player.ChangeRoom(5, -100, -100);
}

