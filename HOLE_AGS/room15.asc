// room script file

function room_Load()
{
  guiScoreScreen.Visible = true;
  guiScoreScreen.Transparency = 100;
  gFinalDepth = gFinalDepth / 32;
  // Prep score screen label text
  labFinalDepth.Text = String.Format("%d depth units", gFinalDepth);
  labFinalTime.Text = String.Format("%d hrs, %d min, %d sec", gTimerHours, gTimerMinutes, gTimerSeconds);
  labFinalScore.Text = String.Format("%d points", gScore);
  audioMusic.Stop();
}

function room_AfterFadeIn()
{
  Wait(30);
  audioMusic = aCrypto.Play(eAudioPriorityHigh, eOnce);
  int ScoreStartTimer = 100;
  while (ScoreStartTimer > 0) {
    ScoreStartTimer--;
    guiScoreScreen.Transparency = ScoreStartTimer;
    Wait(2);
  }
  Wait(30);
}
