// room script file

int transp = 100;

function room_Load()
{
  // Prep the main menu here
  guiMainMenu.Transparency = transp;
  guiMainMenu.Visible = true;
  Mouse.Mode = eModeInteract;
}

function room_AfterFadeIn()
{
  // Main menu music
  // Fade in main menu
  StartCutscene(eSkipAnyKeyOrMouseClick);
  while (transp > 0) {
    transp--;
    guiMainMenu.Transparency = transp;
    Wait(1);
  }
  EndCutscene();
}

